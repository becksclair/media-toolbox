{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Go: API (debug)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder:videofetch}",
      "cwd": "${workspaceFolder:videofetch}",
      "envFile": "${workspaceFolder:videofetch}/.env"
    },
    {
      "name": "Chrome: launch (extension)",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "EXT: bun dev",
      "url": "chrome://extensions/",
      "webRoot": "${workspaceFolder:toolbox-ext}",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--load-extension=${workspaceFolder:toolbox-ext}/.wxt/dev/chrome-mv3",
        "--disable-extensions-except=${workspaceFolder:toolbox-ext}/.wxt/dev/chrome-mv3",
        "--user-data-dir=${workspaceFolder:toolbox-ext}/.chrome-debug-profile"
      ],
      "runtimeExecutable": "/usr/bin/helium-browsehelium-browserr",
      "trace": false
    },
    // {
    //   "name": "PWA: Chrome",
    //   "type": "chrome",
    //   "request": "launch",
    //   "url": "http://localhost:5173",
    //   "webRoot": "${workspaceFolder:web}",
    //   "runtimeExecutable": "google-chrome-stable"
    // },
    {
      "name": "Chrome: attach (extension)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder:toolbox-ext}",
      "trace": false
    }
  ],
  "compounds": [
    {
      "name": "ALL: dev & debug",
      "configurations": [
        "Go: API (debug)",
        "Chrome: launch (extension)",
        // "PWA: Chrome",
        "Chrome: attach (extension)"
      ],
      "preLaunchTask": "Dev: all (parallel)"
    }
  ]
}